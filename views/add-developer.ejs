<!-- views/add-developer.ejs -->
<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <title>TeamCraft - Yeni Profil Ekle</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Yeni Geliştirici Profili Ekle</h1>

      <!-- BU SATIRIN BİREBİR AYNI OLDUĞUNDAN EMİN OLUN -->
      <form action="/developers" method="POST">
        <div>
          <label for="name">İsim Soyisim:</label>
          <input type="text" id="name" name="developerName" required />
        </div>
        <div>
          <label for="skills">Yetenekler (Virgülle ayırın):</label>
          <input type="text" id="skills" name="developerSkills" required />
        </div>
        <div>
          <label for="linkedin">LinkedIn URL:</label>
          <input type="url" id="linkedin" name="developerLinkedin" />
        </div>
        <button type="submit">Profili Ekle</button>
      </form>
      <br />
      <a href="/developers">Listeye Geri Dön</a>
    </div>
  </body>
</html>
